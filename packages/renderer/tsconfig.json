{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@openvisionmatrix/core": ["../core/src"]
    },
    "disableSourceOfProjectReferenceRedirect": true,
    "disableReferencedProjectLoad": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"],
  "references": [
    { "path": "../core" }
  ]
}
